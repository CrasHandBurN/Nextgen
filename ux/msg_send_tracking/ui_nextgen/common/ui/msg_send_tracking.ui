			<row  bmp="ico_sms_tracking.svg" text=(translate("MSG Tracking")) 
				onrelease='ui.MSG_send_tracking_Button.ONRELEASE()()' onlongclick='ui.MSG_send_tracking_Button.ONLONGCLICK()()' />
		</insert>
	</modify>
<!end/>
